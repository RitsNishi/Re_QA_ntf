<?xml version="1.0" encoding="UTF-8"?>
<xp:view xmlns:xp="http://www.ibm.com/xsp/core"
	xmlns:xe="http://www.ibm.com/xsp/coreex"
	xmlns:xc="http://www.ibm.com/xsp/custom">
	
	<xp:this.data>
		<xp:dominoView var="view1" viewName="V_Tag"
			search="#{javascript:sessionScope.searchEdit}">
		</xp:dominoView>
	</xp:this.data>

	<xp:this.resources>
		<xp:styleSheet href="/qa.css"></xp:styleSheet>
		<xp:script src="/Common_jss.jss" clientSide="false"></xp:script>
	</xp:this.resources>

	<xp:panel>
		
		<xp:inputText id="inputSearchEdit" style="width:350px;height:21px" defaultValue="#{javascript:sessionScope.searchEdit}">



		<xp:eventHandler event="onkeypress" submit="false" id="eventHandler3">
			<xp:this.script><![CDATA[if(event.keyCode == 13){ 
	event.keyCode = 0;
	dojo.byId("#{id:lnkSearch}").click();
} ]]></xp:this.script>

			<xp:eventHandler event="onkeypress" submit="true" refreshMode="complete" id="eventHandler4">
				<xp:this.script><![CDATA[if(event.keyCode == 13){ 
	return true; 
}else{
	return false;
} ]]></xp:this.script>
				<xp:this.action><![CDATA[#{javascript://申請書
